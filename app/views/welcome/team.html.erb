<% if @distributers.present?%>
  <div class="gray_block">
    <div class="container_12">
      <div class="grid_12">
        <h2 class="mb0">Our Distributers</h2>
      </div>
    </div>
  </div>
  <div class="gray_block gb1">
    <div class="container_12">
      <div class="grid_12">
        <div class="blog">
          <div class="extra_wrapper">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr role="row" class="heading">
                  <th width="5%">S.no</th>
                  <th width="20%">Name</th>
                  <th width="20%">Email</th>
                  <th width="40%">Address</th>
                  <th width="20%">Phone Number</th>
                </tr>
              </thead>
              <tbody>
                <% @distributers.each_with_index do |dist, i|%>
                  <tr>
                    <td><%= i+1%></td>
                    <td><%= "#{dist.try(:first_name)} #{dist.try(:last_name)}"%></td>
                    <td><%= dist.email%></td>
                    <td><%= dist.address%></td>
                    <td><%= dist.phone_number%></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
